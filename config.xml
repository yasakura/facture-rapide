<?xml version='1.0' encoding='utf-8'?>
<widget id="io.cordova.codeAndSmile.fastInvoices" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Facture rapide</name>
    <description>
        An application for make invoices.
    </description>
    <author email="freelance@ljamal.net" href="http://ljamal.net">
        Lionel JAMAL
    </author>
    <icon src="src/assets/ios/icon_app/icon.png" />
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <preference name="BackgroundColor" value="#f7f7f8" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <icon height="40" src="src/assets/ios/icon_app/icon-40.png" width="40" />
        <icon height="80" src="src/assets/ios/icon_app/icon-40@2x.png" width="80" />
        <icon height="120" src="src/assets/ios/icon_app/icon-60@2x.png" width="120" />
        <icon height="57" src="src/assets/ios/icon_app/icon.png" width="57" />
        <icon height="1024" src="src/assets/ios/icon_app/icon-1024.png" width="1024" />
        <splash src="src/assets/ios/screen/Default@2x~iphone~anyany.png" />
        <splash src="src/assets/ios/screen/Default@2x~iphone~comany.png" />
        <splash src="src/assets/ios/screen/Default@2x~iphone~comcom.png" />
        <splash src="src/assets/ios/screen/Default@3x~iphone~anyany.png" />
        <splash src="src/assets/ios/screen/Default@3x~iphone~anycom.png" />
        <splash src="src/assets/ios/screen/Default@3x~iphone~comany.png" />
    </platform>
    <config-file parent="UIUserInterfaceStyle" platform="ios" target="*-Info.plist">
        <string>Light</string>
    </config-file>
    <plugin name="cordova-plugin-whitelist" spec="1.3.2" />
    <plugin name="cordova-pdf-generator" spec="1.9.3" />
</widget>
