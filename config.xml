<?xml version='1.0' encoding='utf-8'?>
<widget id="io.cordova.codeAndSmile.invoices" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Invoices</name>
    <description>
        An application for make invoices.
    </description>
    <author email="freelance@ljamal.net" href="http://ljamal.net">
        Lionel JAMAL
    </author>
    <icon src="src/assets/icon_app/ios/icon.png" />
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <preference name="BackgroundColor" value="#f7f7f8" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <icon height="40" src="src/assets/icon_app/ios/icon-40.png" width="40" />
        <icon height="80" src="src/assets/icon_app/ios/icon-40@2x.png" width="80" />
        <icon height="120" src="src/assets/icon_app/ios/icon-60@2x.png" width="120" />
        <icon height="57" src="src/assets/icon_app/ios/icon.png" width="57" />
    </platform>
    <engine name="ios" spec="^4.5.4" />
    <plugin name="cordova-plugin-whitelist" spec="^1.3.2" />
    <plugin name="cordova-pdf-generator" spec="^1.9.3" />
</widget>
